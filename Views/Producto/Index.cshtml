@model IEnumerable<WebAppCentroComputo.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nuevo producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCategNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdMarcaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategNavigation.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMarcaNavigation.Marca1)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.IdProd" class="btn btn-success btn-sm">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProd" class="btn btn-dark btn-sm">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProd" class="btn btn-danger btn-sm">Eliminar</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
