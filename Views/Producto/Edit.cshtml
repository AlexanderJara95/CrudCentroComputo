@model WebAppCentroComputo.Models.Producto

@{
    ViewData["Title"] = "Edit";
    List<SelectListItem> itemCat = (List<SelectListItem>)ViewBag.itemCat;
    List<SelectListItem> itemMarca = (List<SelectListItem>)ViewBag.itemMarca;
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProd" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
